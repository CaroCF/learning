#Import a single class

from ereader_class import Ereader

my_new_ereader = Ereader("Amazon Kindle", "Paperwhite", "Adjustable backlight","12 hours battery","300 dpi", "red")
print(my_new_ereader.get_ereader_name())


from ereader_class import KindleFire

my_kindle_fire = KindleFire("amazon","kindle fire","backlight","color screen","12 hours","red")
print(my_kindle_fire.get_ereader_name())

print(my_kindle_fire.firescreen.describe_screen())

