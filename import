#Import a single class

from ereader_class import Ereader, KindleFire

my_new_ereader=Ereader("amazon","paperwhite","backlight","12 hours","300 dpi","red")
print(my_new_ereader.get_ereader_name())

my_color_ereader=KindleFire("amazon","kindlefire","backlight","12 hours","300 dpi","red")
print(my_color_ereader.get_ereader_name())

